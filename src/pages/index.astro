---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
---

<Layout title="ComputerServiceEC - Soluciones Informáticas Integrales">
  <Hero />
  <section class="py-16">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center mb-10">Nuestros Servicios</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <ServiceCard
          title="Soporte Técnico"
          icon="fa-wrench"
          description="Resolvemos tus problemas informáticos de manera rápida y eficiente."
          link="/soporte-tecnico"
        />
        <ServiceCard
          title="Desarrollo Web"
          icon="fa-code"
          description="Creamos sitios web modernos, responsivos y optimizados para tu negocio."
          link="/desarrollo-web"
        />
        <ServiceCard
          title="Análisis de Seguridad"
          icon="fa-shield-alt"
          description="Protegemos tu información de amenazas y vulnerabilidades."
          link="/analisis-seguridad"
        />
      </div>
    </div>
  </section>
  </Layout>